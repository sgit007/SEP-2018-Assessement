<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".Activity.UserActivities.FeedbackActivity">


    <EditText
        android:id="@+id/feedback_et"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:ems="10"
        android:hint="@string/enter_feedback"
        android:textColor="@color/black"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/feedback_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/submit_feedback"
        android:textStyle="bold"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textAlignment="center"
        android:fontFamily="@font/font1"/>

    <CheckBox
        android:id="@+id/feedbackAnonymous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/feedback_btn"
        android:layout_alignStart="@+id/feedback_et"
        android:fontFamily="@font/font1"
        android:textSize="17dp"
        android:text="@string/send_user_data_to_us" />

</RelativeLayout>