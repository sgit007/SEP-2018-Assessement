<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SystemAdminActivity.AddNewParkingFragment">

    <LinearLayout
        android:id="@+id/level_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".3"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="font1"
            android:text="@string/level"
            android:layout_weight=".3"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/spinner_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:entries="@array/level" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_of_parking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".3"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/get_number_for_parking_lots"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="@string/number"
            android:layout_weight=".3"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".3"
            android:gravity="center">

            <Spinner
                android:id="@+id/spinner_parking_lot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:entries="@array/parking_lot" />

            <Button
                android:id="@+id/add_parking_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:layout_gravity="end"
                android:text="@string/add" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>