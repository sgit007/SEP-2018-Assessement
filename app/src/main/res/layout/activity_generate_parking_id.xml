<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BookingActivities.GenerateParkingIDActivity"
    tools:layout_editor_absoluteY="81dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/parkingIDtoUser"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_parking_id_is"
            android:fontFamily="@font/font2"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_marginLeft="60dp"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/parkingIDtoUser"
        android:text="@string/sample"
        android:layout_marginLeft="145dp"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/backToMainButtoninGeneratePage"
        app:layout_constraintStart_toEndOf="@+id/backToMainButtoninGeneratePage"
        app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/confirmb"/>


    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/confirmb"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginLeft="112dp"
        android:text="@string/confirm_booking"
        android:fontFamily="@font/font1"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textAlignment="center"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/confirmb"
        app:layout_constraintTop_toBottomOf="@+id/confirmb" />

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/cancelb"/>


    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/cancelb"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:fontFamily="@font/font1"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginLeft="112dp"
        android:textAlignment="center"
        android:background="@color/black"
        android:text="@string/cancel"/>

</LinearLayout>
</LinearLayout>
